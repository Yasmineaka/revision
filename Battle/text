        // Vous pouvez ajouter ce script si vous souhaitez que l'animation démarre lors du chargement de la page.
document.addEventListener("DOMContentLoaded", function() {
  const text = document.querySelector(".letters");
  text.innerHTML = text.textContent.replace(/\S/g, "<span class='letter'>$&</span>");

  const animation = text.querySelector(".text-animation");
  animation.style.width = "auto";
});

    </script>












